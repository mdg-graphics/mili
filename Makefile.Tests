${MLIB}: ${MILI_C_SRC} ${MILI_f_SRC} ${MILI_F_SRC}
	cd ${top_srcdir}/src && ${MAKE}
data:
	mkdir ${srcdir}/data

mostlyclean: clean

distclean: clean
	rm Makefile

clean: clean_obj clean_app clean_db

